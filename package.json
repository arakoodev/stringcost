{
  "name": "stringcost",
  "private": true,
  "version": "0.1.0",
  "description": "Monorepo for the stringcost agent framework, Next.js demo app, and CLI scaffolding.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces && node --test tests/smoke/cli-smoke.test.js",
    "lint": "npm run lint --if-present --workspaces",
    "dev:web": "npm run dev --workspace web"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arakoodev/stringcost.git"
  },
  "keywords": [
    "agents",
    "billing",
    "vercel",
    "nextjs",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/arakoodev/stringcost/issues"
  },
  "homepage": "https://github.com/arakoodev/stringcost#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "esbuild": "^0.25.10",
    "fast-glob": "^3.3.3",
    "source-map": "^0.7.4",
    "tsup": "^7.2.0",
    "typescript": "^5.4.0"
  }
}
